{
  "compilerOptions": {
    "target": "es5", 
    "module": "commonjs", 
    "resolveJsonModule": true,
    "outDir": "./dist", 
    "baseUrl": "./src", 
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@errors/*": ["errors/*"],
      "@utils/*": ["utils/*"],
      "@middlewares*": ["middlewares/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}